<link rel="stylesheet" href="style.css">
<script src="lib-head.pack.min.js"></script>
<style>
 h1, p {
 	color:#fff;
 }
</style>
<canvas id="canvas" class="canvas" width="100%" height="100%"></canvas>

	<div class="row mb-4">
	    <div class="col my-auto">
			<h1><i class="far fa-grin-wink"></i> Face Login</h1>
			{{#if user}}
				<p>You are logged in as {{user.local.username}}
			{{/if}}
		</div>
	</div>
{{#unless user}}
	<div class="row text-center">
	    <div class="col text-center my-auto">
	        <div class="card bg-secondary">
	            <div class="card-body align-items-center d-flex justify-content-center">
	                <a href="/login" class="btn btn-lg btn-block btn-secondary"><i class="fas fa-sign-in-alt"></i> Login</a>
	            </div>
	        </div>
	    </div>
	    <div class="col text-center my-auto">
	        <div class="card bg-secondary">
	            <div class="card-body align-items-center d-flex justify-content-center">
	                <a href="/signup" class="btn btn-lg btn-block btn-secondary"><i class="fas fa-user-plus"></i> Signup</a>
	            </div>
	        </div>
	    </div>
	</div>
{{/unless}}
